bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# colors [for i3status]
set $background_color #2F343F
set $text_color       #f3f4f5
set $inactive_background_color   #2F343F
set $inactive_text_color #1F1F1F

# border bg fg indicator
client.focused $background_color $background_color $text_color $background_color
client.unfocused $background_color $background_color $background_color $background_color
client.focused_inactive $background_color $background_color $background_color $background_color

# keybindings
bindsym $mod+Return exec urxvtc -e "tmux"
bindsym $mod+Shift+Return exec urxvtc -name "urxvt_mini"
bindsym $mod+d exec urxvtc -name "urxvt_mini" -e ranger
bindsym $mod+Shift+f exec "firefox -P Clandestine"
bindsym $mod+F2 exec "rofi -show run -width 30 -hide-scrollbar -lines 3 -font 'Hermit 18'"
bindsym $mod+Tab exec "rofi -show window -width 30 -hide-scrollbar -lines 3 -font 'Hermit 18'"
bindsym Print exec scrot -e 'mv $f ~/Pictures/screencaps'
bindsym Shift+Print exec scrot -s -e 'mv $f ~/Pictures/screencaps'
bindsym $mod+Home exec ~/backupity/.dotfiles/shell_scripts/lock.sh
bindsym XF86AudioRaiseVolume exec "amixer -q sset Master 2%+ playback unmute"
bindsym XF86AudioLowerVolume exec "amixer -q sset Master 2%- playback unmute"
bindsym Mod1+XF86AudioLowerVolume exec "amixer -q sset Master 2%+ playback unmute"
bindsym XF86AudioMute exec ~/backupity/.dotfiles/shell_scripts/toggle_mute.zsh
bindsym XF86AudioPlay exec playerctl play-pause || cmus-remote -u
bindsym XF86AudioPause exec playerctl play-pause || cmus-remote -u
bindsym XF86AudioNext exec playerctl next || cmus-remote -n
bindsym XF86AudioPrev exec playerctl previous || cmus-remote -p
bindsym XF86AudioStop exec playerctl stop || cmus-remote -s
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86MonBrightnessUp exec xbacklight -inc 10


