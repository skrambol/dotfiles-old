set $mod Mod4

font pango:Monaco 9

floating_modifier $mod

bindsym $mod+Shift+q kill

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+n split h

bindsym $mod+v split v

bindsym $mod+f fullscreen toggle

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+Shift+space floating toggle

bindsym $mod+space focus mode_toggle

bindsym $mod+a focus parent

set $WS1 "1:"
set $WS2 "2:"
set $WS3 "3:"
set $WS4 "4:"
set $WS5 "5:V"
set $WS6 "6:VI"
set $WS7 "7:VII"
set $WS8 "8:"
set $WS9 "9:"
set $WS10 "10:"

bindsym $mod+1 workspace $WS1
bindsym $mod+2 workspace $WS2
bindsym $mod+3 workspace $WS3
bindsym $mod+4 workspace $WS4
bindsym $mod+5 workspace $WS5
bindsym $mod+6 workspace $WS6
bindsym $mod+7 workspace $WS7
bindsym $mod+8 workspace $WS8
bindsym $mod+9 workspace $WS9
bindsym $mod+0 workspace $WS10

bindsym $mod+Shift+1 move container to workspace $WS1
bindsym $mod+Shift+2 move container to workspace $WS2
bindsym $mod+Shift+3 move container to workspace $WS3
bindsym $mod+Shift+4 move container to workspace $WS4
bindsym $mod+Shift+5 move container to workspace $WS5
bindsym $mod+Shift+6 move container to workspace $WS6
bindsym $mod+Shift+7 move container to workspace $WS7
bindsym $mod+Shift+8 move container to workspace $WS8
bindsym $mod+Shift+9 move container to workspace $WS9
bindsym $mod+Shift+0 move container to workspace $WS10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# keybindings
bindsym $mod+Return exec --no-startup-id urxvtc -e "tmux"
bindsym $mod+Shift+Return exec --no-startup-id urxvtc -name "urxvt_mini"
bindsym $mod+d exec pcmanfm
bindsym $mod+Shift+f exec "firefox -P Clandestine"
bindsym $mod+F2 exec --no-startup-id "rofi -show run -width 30 -hide-scrollbar -lines 3 -font 'Hermit 18'"
bindsym $mod+Tab exec --no-startup-id "rofi -show window -width 30 -hide-scrollbar -lines 3 -font 'Hermit 18'"
bindsym Print exec --no-startup-id scrot -e 'mv $f ~/Pictures/screencaps'
bindsym Shift+Print exec --no-startup-id scrot -s -e 'mv $f ~/Pictures/screencaps'
bindsym $mod+Home exec --no-startup-id ~/backupity/.dotfiles/shell_scripts/lock.sh
bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer -q sset Master 2%+ playback unmute"
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer -q sset Master 2%- playback unmute"
bindsym Mod1+XF86AudioLowerVolume exec --no-startup-id "amixer -q sset Master 2%+ playback unmute"
bindsym XF86AudioMute exec --no-startup-id ~/backupity/.dotfiles/shell_scripts/toggle_mute.zsh
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause || cmus-remote -u
bindsym XF86AudioPause exec --no-startup-id playerctl play-pause || cmus-remote -u
bindsym XF86AudioNext exec --no-startup-id playerctl next || cmus-remote -n
bindsym XF86AudioPrev exec --no-startup-id playerctl previous || cmus-remote -p
bindsym XF86AudioStop exec --no-startup-id playerctl stop || cmus-remote -s
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10

# window settings
assign [class="Firefox"] $WS1
assign [instance="^urxvt$"] $WS2
assign [class="Evince"] $WS3
assign [class="Gimp"] $WS4
assign [class="Steam"] $WS8
assign [class="discord"] $WS9
assign [title="Audacious"] $WS10
assign [title="cmus"] $WS10
assign [title="cava"] $WS10

for_window [instance="urxvt_mini"] floating enable
for_window [class="URxvt"] border pixel 1
for_window [class="discord"] floating enable border pixel 1
for_window [class="Pcmanfm"] floating enable
for_window [class="feh"] floating enable
for_window [class="Nitrogen"] floating enable
for_window [class="Steam"] floating enable
for_window [title="cmus"] move right 325px
for_window [title="cava"] move left 325px move up 10px
for_window [instance="Places|Devtools|Browser" class="Firefox"] floating enable

hide_edge_borders both
new_window pixel 1

exec --no-startup-id nitrogen --restore
exec --no-startup-id wal -Rqn -a "95"
exec --no-startup-id ~/backupity/.dotfiles/shell_scripts/wal-set.sh
