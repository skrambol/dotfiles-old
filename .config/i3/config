assign [class="Firefox"] $WS1
assign [class="Gimp"] $WS4
assign [class="discord"] $WS9
assign [title="Audacious"] $WS10
# assign [title="cmus v2.7.1"] $WS10
# assign [title="cava"] $WS10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# keybindings
bindsym Print exec scrot -e 'mv $f ~/Pictures/screencaps'
bindsym $mod+Home exec lockity
bindsym XF86AudioRaiseVolume exec "amixer -q sset Master 2%+ playback unmute"
bindsym XF86AudioLowerVolume exec "amixer -q sset Master 2%- playback unmute"
bindsym Mod1+XF86AudioLowerVolume exec "amixer -q sset Master 2%+ playback unmute"
# bindsym XF86AudioMute exec "amixer -q sset Master, Speaker, Headphone toggle"
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86MonBrightnessUp exec xbacklight -inc 10

set $background_color #2F343F
set $text_color       #f3f4f5
set $inactive_background_color   #2F343F
set $inactive_text_color #1F1F1F

# border bg fg indicator
client.focused $background_color $background_color $text_color $background_color
client.unfocused $background_color $background_color $background_color $background_color
client.focused_inactive $background_color $background_color $background_color $background_color

for_window [class="URxvt"] border pixel 1
for_window [class="discord"] floating enable border pixel 1
for_window [class="Pcmanfm"] floating enable
for_window [class="Feh"] floating enable
for_window [class="Nitrogen"] floating enable
# for_window [title="cmus v2.7.1"] move to workspace $WS10 floating enable move left 325px
# for_window [title="cava"] move to workspace $WS10 floating enable move right 325px move down 10px

hide_edge_borders both
new_window pixel 1

bar {
  status_command ~/.config/i3/i3status_mod.sh
  font pango:Hermit 8
  position top
  colors {
    background $background_color
    # border background text
    focused_workspace $background_color $background_color $text_color
    inactive_workspace $background_color $background_color $inactive_text_color
  }
}

